@using System.Globalization

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SimplCommerce</title>
    @RenderSection("additionalMeta", false)

    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap4/css/bootstrap.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/multi-dropdown-menu/css/bootstrap-4-navbar.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/site.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/chatbox.css" />

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap4/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/lib/multi-dropdown-menu/js/bootstrap-4-navbar.js"></script>
    <script simpl-append-version="true" src="~/lib/matchheight/jquery.matchHeight.js"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    @if (CultureInfo.CurrentCulture.Name == "vi-VN")
    {
        <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/locales/vi-vn.js"></script>
    }
    <script simpl-append-version="true" src="~/modules/core/main.js"></script>
    <script simpl-append-version="true" src="~/modules/core/chat.js"></script>
    <script simpl-append-version="true" src="~/modules/core/signalr.js"></script>

    <script simpl-append-version="true" src="~/modules/shopping-cart/add-to-cart.js"></script>
    <script simpl-append-version="true" src="~/modules/product-comparison/product-comparison.js"></script>



    @RenderSection("head", required: false)
</head>
<body>
    <div class="top-bar">
        <div class="container">
            <ul class="nav justify-content-end">
                @*@await Html.PartialAsync("_SelectLanguagePartial")*@
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </div>
    <div class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4 logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img alt="PharmaOnline" src="~/modules/core/PharmaOnline245.png" />

                    </a>
                </div>
                <div class="col-10 col-md-5 col-lg-7 search-box">
                    @await Component.InvokeAsync("SearchForm")
                </div>
                <div class="col-2 col-md-1 cart-btn">
                    @await Component.InvokeAsync("CartBadge")
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-expand-lg navbar-light bg-light btco-hover-menu main-nav">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                @await Component.InvokeAsync("CategoryMenu")
            </div>
        </div>
    </div>
    @*<partial name="_CookieConsentPartial" />*@
    <div class="container body-content">
        @RenderBody()
    </div>
    @{
        if (ViewData["Title"].ToString() != "doctor portal")
        {

            <div id="live-chat">

                <header class="clearfix">

                    <a href="#" class="chat-close">-</a>

                    <h4>Consult Our General Physician</h4>

                    @*<span class="chat-message-counter">3</span>*@

                </header>


                <div class="chat">

                    <ul id="messagesList"></ul>

                    <form action="#" method="post">

                        <fieldset>
                            <div id="chat_intro">


                                <label>Enter Full Name</label>
                                <input type="text" id="userName" />
                                <br />
                                <label>Enter Email Address</label>
                                <input type="text" id="userEmail" />
                                <div style="padding-top:5px"></div>
                                <input type="button" class="btn btn-default" value="Start" id="chat_start" />
                            </div>

                            <div id="chat_input" style="display:none;">
                                <input type="text" id="messageInput" placeholder="Type your message…" />
                                @*<input type="text" placeholder="Type your message…" hidden>*@
                                <br />
                                <input type="button" id="sendButton" value="Send" />
                                <input type="hidden">
                            </div>
                        </fieldset>

                    </form>

                </div> <!-- end chat -->
            </div>

        }
        else
        {

            <script>

                $(document).ready(function () { 
                    $(".top-bar").remove();
                    $(".search-box").remove();
                    $(".cart-btn").remove();

                    $(".footer-content .container .row .col-md-3").remove();
                });
            </script>

        }
        <!-- end live-chat -->}
    }

