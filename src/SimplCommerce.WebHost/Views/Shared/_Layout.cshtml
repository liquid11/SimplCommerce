@using System.Globalization

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SimplCommerce</title>

    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap4/css/bootstrap.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/multi-dropdown-menu/css/bootstrap-4-navbar.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/site.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/chatbox.css"/>

    @RenderSection("head", required: false)
</head>
<body>
    <div class="top-bar">
        <div class="container">
            <ul class="nav justify-content-end">
                @*@await Html.PartialAsync("_SelectLanguagePartial")*@
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </div>
    <div class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4 logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img alt="SimplCommerce" src="~/modules/core/PharmaOnline245.png" />

                    </a>
                </div>
                <div class="col-10 col-md-5 col-lg-7 search-box">
                    @await Component.InvokeAsync("SearchForm")
                </div>
                <div class="col-2 col-md-1 cart-btn">
                    @await Component.InvokeAsync("CartBadge")
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-expand-lg navbar-light bg-light btco-hover-menu main-nav">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                @await Component.InvokeAsync("CategoryMenu")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()



    </div>

    @{
        if (ViewData["Title"].ToString() == "Home Page") { 
            
    <div id="live-chat">

        <header class="clearfix">

            <a href="#" class="chat-close">-</a>

            <h4>Consult Our General Physician</h4>

            <span class="chat-message-counter">3</span>

        </header>

        <div class="chat">

            <div class="chat-history">

                <div class="chat-message clearfix">

                    @*<img src="http://lorempixum.com/32/32/avatar" alt="" width="32" height="32">*@

                    <div class="chat-message-content clearfix">

                        <span class="chat-time">13:35</span>

                        <h5>General Physian</h5>

                        <p>hello there, How can i help you</p>

                    </div> <!-- end chat-message-content -->

                </div> <!-- end chat-message -->

                <hr>

                @*<div class="chat-message clearfix">

                    <img src="http://gravatar.com/avatar/2c0ad52fc5943b78d6abe069cc08f320?s=32" alt="" width="32" height="32">

                    <div class="chat-message-content clearfix">

                        <span class="chat-time">13:37</span>

                        <h5>Marco Biedermann</h5>

                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Blanditiis, nulla accusamus magni vel debitis numquam qui tempora rem voluptatem delectus!</p>

                    </div>  end chat-message-content 

                </div>*@ <!-- end chat-message -->

                <hr>

                @*<div class="chat-message clearfix">

                    <img src="http://lorempixum.com/32/32/people" alt="" width="32" height="32">

                    <div class="chat-message-content clearfix">

                        <span class="chat-time">13:38</span>

                        <h5>John Doe</h5>

                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing.</p>

                    </div>  end chat-message-content 

                </div>*@ <!-- end chat-message -->

                <hr>

            </div> <!-- end chat-history -->
            @*<p class="chat-feedback">Your partner is typing…</p>*@

            <form action="#" method="post">

                <fieldset>

                    <input type="text" placeholder="Type your message…" autofocus>
                    <input type="hidden">

                </fieldset>

            </form>

        </div> <!-- end chat -->

    </div>
        }
    }

     <!-- end live-chat -->

    <div class="footer-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h4>@Localizer["Customer Service"]</h4>
                    <vc:menu menu-id="1"></vc:menu>
                </div>
                <div class="col-md-3">
                    <h4>Information</h4>
                    <vc:menu menu-id="2"></vc:menu>
                </div>
                @*<div class="col-md-6">
                        <h4>SimplCommerce</h4>
                        <p>The first ecommerce system built on .NET Core.</p>
                        <p>Simple to use and easy to customize</p>
                        <p>Cross platform and Open source</p>
                    </div>*@
            </div>
            <hr />
            <p class="pull-left">&copy; @DateTime.Now.Year - PharmaOnline</p>
            <p class="pull-right">
                Powered by
                <a href="http://www.PharmaOnline.com"><strong>PharmaOnline</strong></a>
            </p>
        </div>
    </div>
    <div id="shopModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <script>
            window.simplGlobalSetting = {};
            window.simplGlobalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    @*<script simpl-append-version="true" src="~/lib/jquery/jquery.js"></script>*@
    <script simpl-append-version="true" src="~/lib/bootstrap4/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/lib/multi-dropdown-menu/js/bootstrap-4-navbar.js"></script>
    <script simpl-append-version="true" src="~/lib/matchheight/jquery.matchHeight.js"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    @if (CultureInfo.CurrentCulture.Name == "vi-VN")
    {
        <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/locales/vi-vn.js"></script>
    }
    <script simpl-append-version="true" src="~/modules/core/main.js"></script>
    <script simpl-append-version="true" src="~/modules/shopping-cart/add-to-cart.js"></script>
    <script simpl-append-version="true" src="~/modules/product-comparison/product-comparison.js"></script>
    <script simpl-append-version="true" src="~/modules/core/chatbox.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
