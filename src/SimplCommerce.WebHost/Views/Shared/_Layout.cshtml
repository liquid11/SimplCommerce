                <div class="row">
                    <div class="col-2">&nbsp;</div>
                    <div class="col-2">
                        User..........<input type="text" id="userInput" />
                        <br />
                        Message...<input type="text" id="messageInput" />
                        <input type="button" id="sendButton" value="Send Message" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">&nbsp;</div>
                    <div class="col-4">
                        <ul id="messagesList"></ul>
                    </div>
                </div>
            </div>
        </div>*@


    <div class="footer-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h4>@Localizer["Customer Service"]</h4>
                    <vc:menu menu-id="1"></vc:menu>
                </div>
                <div class="col-md-3">
                    <h4>Information</h4>
                    <vc:menu menu-id="2"></vc:menu>
                </div>
                @*<div class="col-md-6">
                        <h4>SimplCommerce</h4>
                        <p>The first ecommerce system built on .NET Core.</p>
                        <p>Simple to use and easy to customize</p>
                        <p>Cross platform and Open source</p>
                    </div>*@
            </div>
            <hr />
            <p class="pull-left">&copy; @DateTime.Now.Year - PharmaOnline</p>
            <p class="pull-right">Powered by <a href="http://www.PharmaOnline.com"><strong>PharmaOnline</strong></a></p>
        </div>
    </div>
    <div id="shopModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>


    <script>
            window.simplGlobalSetting = {};
            window.simplGlobalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>

    <script>


    </script>
    @RenderSection("scripts", required: false)

    @await Html.PartialAsync("_AnalyticsScript")
</body>
</html>
